{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"lib": ["es5", "es6", "dom"],
		"importHelpers": true,
		"allowJs": true
	},
	"include": [
		"src/**/*.ts",
		"./*.ts"
	]
}